<h1>All Users</h1>

<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<table>
  <tr>
    <th>Username</th>
    <th>Admin Rights</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.is_admin %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Delete', user_path(user),
              method: :delete,
              data: {confirm: "Are you sure?\nThis will delete all tasks under this user."} %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Logout", '/logout', method: :POST %></p>